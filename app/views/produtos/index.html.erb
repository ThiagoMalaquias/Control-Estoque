					       <input type="hidden" name="authenticity_token" value="kd/it806BFEwgcTeg+QAS8dbp8DmbMuUfzk2kg7xdddYzI6K3yEuj2aAH+ab58drF7sqHw4QwjrgpekZRdkEWA==">

						  <div class="form-group">
						    <label for="produto_nome">Nome</label>
						    <input class="form-control" type="text" value="<%=produto.nome%>" name="produto[nome]" id="produto_nome">
						  </div>

						  <div class="form-group">
						    <label for="produto_qtd">Quantidade</label>
						    <input class="form-control" type="text" value="<%=produto.qtd%>" name="produto[qtd]" id="produto_qtd">
						  </div>
					  </div>
					  <div class="modal-footer">
					    <input type="submit" name="commit" class="btn btn-info" value="Update Produto">
					  </div>
				      </form>	  
				    </div>
				  </div>
				</div>
			<% end %>
		</div>
	</div>
</div>



